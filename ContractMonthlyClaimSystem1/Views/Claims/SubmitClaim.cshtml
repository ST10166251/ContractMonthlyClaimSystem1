@model ContractMonthlyClaimSystem1.Models.Claim

<h2>Submit Claim</h2>

<form asp-action="SubmitClaim" method="post" enctype="multipart/form-data">
    <div>
        <label>Hours Worked:</label>
        <input asp-for="HoursWorked" required />
    </div>
    <div>
        <label>Hourly Rate:</label>
        <input asp-for="TotalAmount" required />
    </div>
    <div>
        <label>Additional Notes:</label>
        <textarea asp-for="AdditionalNotes"></textarea>
    </div>
    <div>
        <label>Upload Document:</label>
        <input type="file" name="file" />
    </div>
    <button type="submit">Submit</button>
</form>


